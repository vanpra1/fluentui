{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "version-string-replace",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "all": {
      "type": "boolean",
      "description": "Run generator on all vNext packages`"
    },
    "match": {
      "type": "string",
      "description": "Regex match the part of the version to replace"
    },
    "replace": {
      "type": "string",
      "description": "Replacement string for the matched version part"
    }
  },
  "required": ["match", "replace"]
}
